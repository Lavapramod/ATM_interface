class ATM:
    def __init__(self, balance=0):
        self.balance = balance
        self.pin = "1234"  # Default PIN for demo

    def authenticate(self):
        for attempt in range(3):
            entered_pin = input("Enter your 4-digit PIN: ")
            if entered_pin == self.pin:
                print("âœ… Authentication successful!\n")
                return True
            else:
                print("âŒ Incorrect PIN. Try again.")
        print("ðŸš« Too many incorrect attempts. Exiting.")
        return False

    def menu(self):
        while True:
            print("\n ATM MENU")
            print("1. Check Balance")
            print("2. Deposit Money")
            print("3. Withdraw Money")
            print("4. Exit")
            choice = input("Select an option (1-4): ")

            if choice == "1":
                self.check_balance()
            elif choice == "2":
                self.deposit()
            elif choice == "3":
                self.withdraw()
            elif choice == "4":
                print("ðŸ’³ Thank you for using our ATM!")
                break
            else:
                print("âš ï¸ Invalid choice. Please try again.")

    def check_balance(self):
        print(f" Current Balance: â‚¹{self.balance}")

    def deposit(self):
        amount = float(input("Enter amount to deposit: â‚¹"))
        if amount > 0:
            self.balance += amount
            print(f"{amount} deposited successfully.")
            self.check_balance()
        else:
            print(" Enter a valid amount.")

    def withdraw(self):
        amount = float(input("Enter amount to withdraw: â‚¹"))
        if amount <= 0:
            print("âš ï¸ Enter a valid amount.")
        elif amount > self.balance:
            print("insufficient funds")
        else:
            self.balance -= amount
            print(f"âœ… â‚¹{amount} withdrawn successfully.")
            self.check_balance()

atm = ATM(balance=5000)
if atm.authenticate():
    atm.menu()
